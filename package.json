{
  "name": "playwright-dashboard",
  "version": "1.0.0",
  "description": "Playwright + Dashboard (Express + UI) para ejecutar pruebas y descargar reporte",
  "main": "electron/main.js",
  "author": "Tu Nombre o Empresa",
  "scripts": {
    "build:server": "tsc -p tsconfig.json --outDir dist-server",
    "pack:win": "npm run build:server && electron-builder --win",
    "dist:win": "npm run build:server && electron-builder --win --publish never"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "data/**"  
    ],
    "appId": "com.playwright.dashboard",
    "productName": "Playwright Test Dashboard",
    "files": [
      "electron/**",
      "dist-server/**",
      "webui/**",
      "data/**",  
      "tests/**",
      "core/**",
      "helpers/**",
      "assets/**",
      "pages/**",
      "types/**",
      "playwright.config.*",
      "global.variables.*",
      "utils/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@playwright/test": "^1.46.0",
    "archiver": "^6.0.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "playwright": "^1.46.0",
    "playwright-extra": "^4.3.6"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.1",
    "electron": "^31.3.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.5.4"
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false
  }
}
